<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ContractNumber</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>awarne@hive.project.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>US-0009870 - [Refurb] Approval Process before sending Contract to Contract Seller</description>
        <label>BU Approval</label>
        <name>BU_Approval</name>
    </approvalStep>
    <description>US-0009870 [Refurb] Approval Process before sending Contract to Contract Seller</description>
    <emailTemplate>EBH_EmailTemplates/Refurb_Contract_Approval_Notification_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contract.EBH_Site__c</field>
            <operation>equals</operation>
            <value>UK</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.Status</field>
            <operation>equals</operation>
            <value>In Negotiation</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contract.RecordType</field>
            <operation>equals</operation>
            <value>Refurbished</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>EBH_UpdatestatusApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_CT_Refurb_ApprovedEmail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_CT_EBHApproved_To_True</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>EBH_InNegotiationStatus</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_CT_Refurb_RejectedEmail</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_CT_Status_To_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>UK Refurb Contract Approval Process</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>EBH_InNegotiationStatus</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
