    </rules>
    <rules>
        <fullName>eBay Ads - Direct Revision Opportunity</fullName>
        <actions>
            <name>eBay_Ads_Direct_Revision_Opportunity</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>AND( $Setup.byPass__c.byPass_WFRule__c = FALSE, ISPICKVAL(Type, &#39;Direct Revision&#39;), RecordType.Name = &#39;eBay Advertising&#39;  )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>eBay Ads - Opp Alert to CM</fullName>
        <actions>
            <name>eBay_Ads_Opp_Alert_to_CM</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>send an email alert to CM is status is paused or canceled.</description>
        <formula>AND(  $Setup.byPass__c.byPass_WFRule__c = FALSE,  $Profile.Name = &quot;Standard Ads User Profile&quot;,  OR( RecordType.Name = &#39;eBay Ads - Direct&#39;,  RecordType.Name = &#39;eBay Ads - Programmatic Guaranteed&#39; ),    OR( ISPICKVAL( Status__c , &#39;Paused&#39;),  ISPICKVAL( Status__c , &#39;Cancelled During Campaign&#39;),  ISPICKVAL( Status__c , &#39;Cancelled Before Campaign&#39;)   ),    NOT(ISBLANK(TEXT(Details__c)))    )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>eBay NA Acquisition OracleID</fullName>
        <actions>
            <name>Update_OracleID_Opportunity</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>US-0008558 - [NA] Opportunity stages, Validations, Activity and Chatter feed</description>
        <formula>IF( AND( RecordType.DeveloperName =&#39;eBay_NA_Acquisition&#39;, NOT( ISBLANK( Seller__r.EBH_OracleID__c ) ) ),      true,false )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
