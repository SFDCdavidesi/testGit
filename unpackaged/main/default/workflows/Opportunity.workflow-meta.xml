    <rules>
        <fullName>AU Notification for Closed Won Opportunities</fullName>
        <actions>
            <name>Email_notification_when_an_opportunity_is_won</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Closed Won</value>
        </criteriaItems>
        <criteriaItems>
            <field>Pricebook2.Name</field>
            <operation>startsWith</operation>
            <value>AU</value>
        </criteriaItems>
        <description>US-009756: An email is sent to the AU Ads TEAM Public Group when an Opportunity changes to Closed won</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>All Closed Won Opportunities</fullName>
        <actions>
            <name>All_Closed_Won_Opportunities</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Revised_Closed_Won_Opportunity</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.RecordTypeId</field>
            <operation>equals</operation>
            <value>eBay Advertising</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Closed Won</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Amount</field>
            <operation>notEqual</operation>
            <value>USD 0</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Incremental Amount</fullName>
        <actions>
            <name>Incremental_Amount</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND( ISCHANGED( Amount ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Marketing Holiday Alerts</fullName>
        <actions>
            <name>Holiday_Pitched</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND(  $Setup.byPass__c.byPass_WFRule__c = FALSE,    $Profile.Name = &quot;Standard Ads User Profile&quot;,  OR( INCLUDES( Marketing_Type__c ,&quot;Holiday&quot;), INCLUDES(Marketing_Type__c,&quot;Integrated Program&quot;), INCLUDES(Marketing_Type__c,&quot;EAAT&quot;), INCLUDES(Marketing_Type__c,&quot;Case Study&quot;), INCLUDES(Marketing_Type__c,&quot;Ad Effectiveness Measurement Study&quot;) )  )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Opportunity 2M Alert</fullName>
        <actions>
            <name>Opportunity_2M_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Opportunity.Amount</field>
            <operation>greaterOrEqual</operation>
            <value>&quot;USD 2,000,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordTypeId</field>
            <operation>equals</operation>
            <value>eBay Ads - Direct</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.ProfileId</field>
            <operation>equals</operation>
            <value>Standard Ads User Profile</value>
        </criteriaItems>
        <description>send an alert when opportunity is more than 2m</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Opportunity terms alert</fullName>
        <actions>
            <name>Opportunity_Terms_Alert</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.IO_Paper__c</field>
            <operation>equals</operation>
            <value>New Terms</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Special_Terms__c</field>
            <operation>notEqual</operation>
            <value>NULL</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordTypeId</field>
            <operation>equals</operation>
            <value>eBay Ads - Direct</value>
        </criteriaItems>
        <description>send an alert when terms = new terms and special terms is populated</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Previous Opportunity Amount</fullName>
        <actions>
            <name>Previous_Opportunity_Amount</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(     
ISCHANGED( Amount ),
NOT(ISBLANK(Amount)) 
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>eBay Ads - Buyer Accepted</fullName>
        <actions>
            <name>eBay_Ads_Buyer_Accepted</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND( $Setup.byPass__c.byPass_WFRule__c = FALSE,   RecordType.DeveloperName  = $Label.OPP_RECORDTYPEDEVNAME_PROGRAMMATIC, Buyer_Accepted__c = TRUE )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
