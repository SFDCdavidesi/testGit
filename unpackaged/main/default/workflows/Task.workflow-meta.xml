    <rules>
        <fullName>Change RT if 3 call attempts or completed</fullName>
        <actions>
            <name>Change_RT_to_Call_Attempts_Task</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Change RT in order to avoid users to call a task which is closed. New RT is associated with a RT without start call script button</description>
        <failedMigrationToolVersion>238.6</failedMigrationToolVersion>
        <formula>and( RecordType.Name &lt;&gt;&#39;AU Task&#39;, RecordType.Name &lt;&gt;&#39;Seller Risk Management&#39;, Log_Task__c =false, or(  Call_attempts__c &gt;=3,  TEXT( Status ) =&quot;Completed&quot;,TEXT( Status ) =&quot;Closed&quot;, TEXT( Status ) =&quot;Cancelled&quot;)  )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>ChangeRecordTypeCallAttempts</fullName>
        <actions>
            <name>Change_RT_to_Call_Attempts_Task</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 or  2</booleanFilter>
        <criteriaItems>
            <field>Task.Call_attempts__c</field>
            <operation>greaterOrEqual</operation>
            <value>3</value>
        </criteriaItems>
        <criteriaItems>
            <field>Task.Status</field>
            <operation>equals</operation>
            <value>Completed,Cancelled,Closed</value>
        </criteriaItems>
        <description>Change Record type if call attempts = 3</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Complete Task if 3 call attempts</fullName>
        <actions>
            <name>Change_Status_to_Completed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Task.Call_attempts__c</field>
            <operation>greaterOrEqual</operation>
            <value>3</value>
        </criteriaItems>
        <criteriaItems>
            <field>Task.RecordTypeId</field>
            <operation>notEqual</operation>
            <value>AU Task</value>
        </criteriaItems>
        <description>Change status to completed if there are 3 call attempts.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>EBH_GCXOutreach_TaskSubjectPrepopulate</fullName>
        <actions>
            <name>EBH_UpdateTaskSubject</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>(EPH-7527) GCX Outreach Call Task user Restrictions</description>
        <formula>AND(  BEGINS(WhatId,&quot;701&quot;),  Related_Campaign__r.RecordType.DeveloperName == &quot;EBH_AMOutreach&quot; ,  Follow_Up_Task__c =false)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
