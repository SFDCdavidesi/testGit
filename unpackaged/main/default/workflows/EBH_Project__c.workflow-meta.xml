    <rules>
        <fullName>Seller Risk Approve Notification</fullName>
        <actions>
            <name>Seller_Risk_Approved_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>US-0009942 - [UK Risk] Pending items- High Priority
US-0011510 - Modify email notifications based on record owner for SRM</description>
        <formula>AND(
    $Permission.UK_Seller_Risk_Management_CUD_GCX,
    RecordType.DeveloperName = &#39;Seller_Risk_Management&#39;,
    Owner:User.FirstName + Owner:User.LastName != &#39;DeploymentUser&#39;,
    CreatedBy.FirstName + CreatedBy.LastName != &#39;DeploymentUser&#39;,
    OR(
        ISCHANGED(EBH_Stage__c),
        ISCHANGED(Ticket_Status__c)
    ),
    ISPICKVAL(EBH_Stage__c, &#39;Completed&#39;),
    ISPICKVAL(Ticket_Status__c , &#39;Approved&#39;)
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
