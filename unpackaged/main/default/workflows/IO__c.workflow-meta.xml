    <rules>
        <fullName>Finance Approval</fullName>
        <actions>
            <name>Finance_Status_Submitted</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 or 2</booleanFilter>
        <criteriaItems>
            <field>IO__c.Total_Order_Amount__c</field>
            <operation>greaterOrEqual</operation>
            <value>&quot;USD 2,000,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>IO__c.Revised_Total_Order_Amount__c</field>
            <operation>greaterOrEqual</operation>
            <value>&quot;USD 2,000,000&quot;</value>
        </criteriaItems>
        <description>if initial or revise amount is greater 2m, finance approval is required</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Incremental Value</fullName>
        <actions>
            <name>Incremental_IO_Amount</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>AND(     ISCHANGED(Revised_Total_Order_Amount__c),     NOT(ISBLANK(Revised_Total_Order_Amount__c)) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Marketing Sold</fullName>
        <actions>
            <name>Marketing_Sold</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>AND(  $Setup.byPass__c.byPass_WFRule__c = FALSE,  OR( INCLUDES(Marketing_Type_Sold__c  ,&quot;Holiday&quot;), INCLUDES(Marketing_Type_Sold__c,&quot;Integrated Program&quot;), INCLUDES(Marketing_Type_Sold__c,&quot;EAAT&quot;), INCLUDES(Marketing_Type_Sold__c,&quot;Case Study&quot;), INCLUDES(Marketing_Type_Sold__c,&quot;Ad Effectiveness Measurement Study&quot;) )  )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>eBay Ads - IO alert to CM</fullName>
        <actions>
            <name>eBay_Ads_IO_alert_to_CM</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>AND(  $Setup.byPass__c.byPass_WFRule__c = FALSE,  OR( RecordType.Name = &#39;Direct&#39;, RecordType.Name = &#39;Programmatic&#39; ),  ISPICKVAL(IO_Status__c, &#39;Approved&#39;),  OR( Dually_Signed_IO__c = TRUE, Buyer_Accepted__c = TRUE )  )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>eBay Ads - Internal Contract Signer</fullName>
        <actions>
            <name>eBay_Ads_Bridget_Davies</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>if the IO amount is &gt; 1M + customer type is 3P, assign Godert van Dedem as the Internal Contract signer</description>
        <formula>AND(  $Setup.byPass__c.byPass_WFRule__c = FALSE, RecordType.Name = &#39;Direct&#39;, Revised_Total_Order_Amount__c &gt;= 1000000,  OR( ISPICKVAL( Most_Recent_Opportunity__r.Customer_Type__c, &quot;3P&quot;), ISPICKVAL( Most_Recent_Opportunity__r.Customer_Type__c, &quot;1P + 3P&quot;) )   )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
