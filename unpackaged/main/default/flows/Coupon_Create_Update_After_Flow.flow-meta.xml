            <connector>
                <targetReference>To_T4</targetReference>
            </connector>
            <label>T4</label>
        </rules>
        <rules>
            <name>T40</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Days_since_coupon_End_Date__c</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>40.0</numberValue>
                </rightValue>
