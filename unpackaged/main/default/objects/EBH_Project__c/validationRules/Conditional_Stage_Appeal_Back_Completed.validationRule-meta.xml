<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Conditional_Stage_Appeal_Back_Completed</fullName>
    <active>true</active>
    <description>US-0010823 - Rejection appeal process for Seller Risk Management</description>
    <errorConditionFormula>IF(AND(RecordType.DeveloperName = &#39;Seller_Risk_Management&#39;, 
    TEXT(PRIORVALUE(EBH_Stage__c)) = &quot;Appeal&quot;,
    OR(ISBLANK(TEXT(Appeal_Status__c)),ISBLANK(CUDComments__c )),
    ISPICKVAL(EBH_Stage__c, &quot;Completed&quot;),
    $Permission.UK_Seller_Risk_Management_CUD_GCX,
    NOT( $Setup.ActiveValidationRules__c.All_Validation_Rules_Deactivated__c),
    NOT(CONTAINS($Profile.Name, &#39;System&#39;))
    )
,true
,false)</errorConditionFormula>
    <errorMessage>Please add &quot;Appeal Status&quot; and &quot;CUD Comments&quot; in order to mark stage as complete</errorMessage>
</ValidationRule>
