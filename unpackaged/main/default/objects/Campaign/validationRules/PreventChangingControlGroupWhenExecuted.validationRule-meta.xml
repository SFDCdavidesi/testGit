<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventChangingControlGroupWhenExecuted</fullName>
    <active>true</active>
    <description>EPH-99, US-0007080</description>
    <errorConditionFormula>ISCHANGED( EBH_ControlGroupSize__c ) &amp;&amp; OR(TEXT(Status)=&quot;Execution&quot;,TEXT(Status)=&quot;Completed&quot;) &amp;&amp; NOT( $Setup.ActiveValidationRules__c.All_Validation_Rules_Deactivated__c )</errorConditionFormula>
    <errorDisplayField>EBH_ControlGroupSize__c</errorDisplayField>
    <errorMessage>You cannot change the control group size when the Campaign is in execution or completed.</errorMessage>
</ValidationRule>
