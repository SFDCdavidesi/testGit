<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>V2_RequireFields</fullName>
    <active>true</active>
    <description>US-0012077 - Changes to NA Deal record field requirements</description>
    <errorConditionFormula>AND(
	NOT($Setup.byPass__c.ByPass_Validation__c),
	RecordType.DeveloperName = &quot;Deal_V2&quot;,	 
	OR(
	ISBLANK(TEXT(EBH_DealSiteId__c)),
	ISNULL(EBH_MaximumPurchases__c) 
	)
	)</errorConditionFormula>
    <errorMessage>Require fields are missing: Deal Site, Maximum Purchases.</errorMessage>
</ValidationRule>
